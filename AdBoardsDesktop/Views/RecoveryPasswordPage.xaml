<Page x:Class="AdBoardsDesktop.Views.RecoveryPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdBoardsDesktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecoveryPasswordPage">

    <StackPanel>
        <TextBlock Text="Регистрация:"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>
        <Separator Opacity="0" Height="30"/>
        <StackPanel Width="350">
            <TextBlock Text="Логин:" FontSize="16"/>
            <TextBox x:Name="tbLogin" 
                         Height="35"
                         MaxLength="30"/>
        </StackPanel>
        <Separator Opacity="0" Height="20"/>
        <Button x:Name="btnRecover"
                Content="Отправить письмо"
                Click="btnRecover_Click"
                Width="250"
                Height="35"/>
    </StackPanel>
</Page>
